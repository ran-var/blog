.post-list
  padding: 0

  .post-item
    margin-bottom: 1rem
    margin-left: 0
    list-style-type: none
    display: flex
    justify-content: space-between
    align-items: center
    flex-wrap: nowrap

    .meta
      display: block
      margin-right: 16px
      width: 100px
      flex-shrink: 0
      color: $color-meta
      font-size: 14px

    .post-title
      flex: 1
      min-width: 0

    .reading-time
      white-space: nowrap
      font-style: italic
      color: $color-meta
      font-size: 0.9rem
      margin-left: 2rem
      flex-shrink: 0

@media (min-width: 480px)
  .post-list
    .post-item
      display: flex
      margin-bottom: 5px

      .meta
        text-align: left
