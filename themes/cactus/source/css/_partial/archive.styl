#archive
  .post-year
    list-style-type: none

  .post-list
    padding: 0

    .post-item
      margin-left: 0
      list-style-type: none

      // Mobile: vertical layout
      display: flex
      flex-direction: column
      gap: 0.5rem
      margin-bottom: 1.5rem

      .post-title-wrapper
        width: 100%

      .post-meta-wrapper
        display: flex
        justify-content: space-between
        align-items: center
        width: 100%

        .meta
          color: $color-meta
          font-size: 14px
          margin: 0

        .reading-time
          white-space: nowrap
          font-style: italic
          color: $color-meta
          font-size: 0.9rem

  // Desktop: horizontal layout (original design)
  @media (min-width: 768px)
    .post-list
      .post-item
        display: flex
        flex-direction: row
        margin-bottom: 5px
        margin-left: 1rem
        gap: 0

        .post-title-wrapper
          flex: 1
          min-width: 0
          order: 2

        .post-meta-wrapper
          display: contents

          .meta
            display: block
            margin-right: 16px
            min-width: 100px
            order: 1
            text-align: left

          .reading-time
            white-space: nowrap
            font-style: italic
            margin-left: 2rem
            flex-shrink: 0
            order: 3
